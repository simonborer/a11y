<!DOCTYPE html>
<html lang="en-US">
<head>
  <%- include('../partials/head') %>
  <link rel="stylesheet" href="<%= site.basePath %>/assets/css/reveal.css">
  <link rel="stylesheet" href="<%= site.basePath %>/assets/css/solarized.css">
</head>
<body>
  
	<div class="reveal">
		<div class="slides">
      <section><h1><%= page.title %></h1></section>
				<% const slides = page.slides %>
				<% slides.forEach(slide => { %>
					<section><%- slide %></section>
				<% }) %>
		</div>
	</div>

<script src="<%= site.basePath %>/assets/javascript/reveal.js"></script>
<script>
      Reveal.initialize();
    </script>
</body>
</html>
